{% extends 'base.html.twig' %}

{% block body %}
    <h1>Impression</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ impression.id }}</td>
            </tr>
            <tr>
                <th>Page</th>
                <td>{{ impression.page }}</td>
            </tr>
            <tr>
                <th>Ipaddress</th>
                <td>{{ impression.ipAddress }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if impression.createdAt %}{{ impression.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('impression_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('impression_edit', { 'id': impression.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
